<h1 class="text-center text-secondary">Sign Up</h1>
</br>
<div class="border border-dark rounded p-3 mb-2 bg-secondary text-white"
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
  </br>
    <div class="field text-center">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border border-dark" %>
    </div>
    </br>
    <div class="field text-center">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "border border-dark" %>
    </div>
    </br>
    <div class="field text-center">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border border-dark" %>
    </div>
    </br>
    <div class="actions text-center">
      <%= f.submit "Sign up", class: "border border-dark" %>
    </div>
  <% end %>
  </br>
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
  </br>
</div>